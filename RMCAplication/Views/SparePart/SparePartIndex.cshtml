@using RMCAplication.ViewModels.SparePartViewModels
@model List<SparePartCreateViewModel>


<h2>Wollcome to SpareParts</h2>

<table class="table table-hover bg-light shadow-lg">
    <thead>
        <tr>
            <th>Име</th>
            <th>Локация</th>
            <th>Брой</th>
            <th>Още</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sparePart in Model)
        {
            <tr>
                <td>@sparePart.Name</td>
                <td>@sparePart.Warehouse.Name</td>
                <td>@sparePart.Count бр.</td>
                <td>
                    <a asp-action="Details" asp-route-id="@sparePart.Id" class="btn btn-sm btn-info">Details</a>
                </td>
            </tr>

        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-info mt-4 w-100 p-2 fw-bold">Add New Item</a>
<a asp-controller="Home" asp-action="Index" class="btn btn-info mt-4 w-100 p-2 fw-bold">Home</a>
